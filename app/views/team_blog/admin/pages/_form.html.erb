<%= form_for([:admin, @page], :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <div class="row row-grid">
      <div class="span8 offset2">
        <%= print_error_messages @page -%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' -%>
      <div class="controls">
        <%= f.text_field :title, :class => 'input-large' -%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :permalink, :class => 'control-label' -%>
      <div class="controls">
        <%= f.text_field :permalink, :class => 'input-large' -%>
        <span class="help-inline">Only lowercase words, numbers and '-'.</span>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body, :class => 'control-label' -%>
      <div class="controls">
        <%= f.text_area :body, :class => 'wysihtml5' -%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :published, :class => 'control-label' -%>
      <div class="controls">
        <%= f.check_box :published, :class => 'input-large' -%>
      </div>
    </div>
    <div class="form-actions" >
      <%= f.submit :class => 'btn btn-primary' -%>
    </div>
  </fieldset>
<%- end -%>
