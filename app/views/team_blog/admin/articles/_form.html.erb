<%= form_for([:admin, @article], :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <div class="row row-grid">
      <div class="span8 offset2">
        <%= print_error_messages @article -%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' -%>
      <div class="controls">
        <%= f.text_field :title, :class => 'input-large' -%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :permalink, :class => 'control-label' -%>
      <div class="controls">
        <%= f.text_field :permalink, :class => 'input-large' -%>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :category, :class => 'control-label' -%>
      <div class="controls">
        <%= f.select :category_id, options_from_collection_for_select(TeamBlog::Category.all, 'id', 'name') %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body, :class => 'control-label' -%>
      <div class="controls">
        <%= f.text_area :body, :class => 'wysihtml5' -%>
      </div>
    </div>
    <div class="form-actions" >
      <%= f.submit :class => 'btn btn-primary' -%>
    </div>
  </fieldset>
<%- end -%>
